{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "..",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}